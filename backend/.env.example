# Application Settings
APP_NAME="PPE Compliance System"
APP_VERSION="1.0.0"
DEBUG=True
ENVIRONMENT="development"

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite:///./ppe_compliance.db

# JWT Settings
# CRITICAL: Generate a secure secret key using: openssl rand -hex 32
# Never commit the actual secret key to version control!
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_KEY_USE_OPENSSL_RAND_HEX_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,https://your-vercel-app.vercel.app

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=52428800  # 50MB

# Video Settings
VIDEO_STREAM_FPS=30
CONFIDENCE_THRESHOLD=0.50

# YOLO Model
# IMPORTANT: Use ABSOLUTE path to avoid issues when running from different directories
# Example Windows: D:/Ppe Compliance/SMART SAFETY PROJECT/TRAINED MODEL RESULT/weights/best.pt
# Example Linux/Mac: /home/username/SMART SAFETY PROJECT/TRAINED MODEL RESULT/weights/best.pt
MODEL_PATH=../../SMART SAFETY PROJECT/TRAINED MODEL RESULT/weights/best.pt

# Default Admin Credentials (only created if no users exist in database)
# CRITICAL: Change these immediately after first login!
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_NAME=System Administrator
